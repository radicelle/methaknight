---
import Container from "@components/container.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { base } from "@utils/all";

const menuitems = [
  {
    title: "MÃ©thanisation",
    path: base + "/methanisation",
  },
  {
    title: "Calendrier",
    path: base + "/calendar",
  },
  {
    title: "Contact",
    path: base + "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href={base + "/"} class="text-4xl"
          ><span class="font-bold text-slate-800">Agri</span><span
            class="text-slate-500">gaz</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex lg:flex-row lg:gap-3 align-middle">
          {
            menuitems.map((item, index) => (
              <>
                {
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900 text-2xl pr-4">
                      {item.title}
                    </a>
                  </li>
                }
              </>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</Container>
